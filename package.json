{
  "name": "project",
  "version": "1.0.0",
  "dependencies": {
    "del": "^2.2.2",
    "del-cli": "^0.2.0",
    "node-sass": "^3.13.0",
    "pug": "^2.0.0-beta6",
    "pug-cli": "^1.0.0-alpha6",
    "pug-lint": "^2.3.0",
    "sass-lint": "^1.10.2"
  },
  "scripts": {
    "clean": "node_modules/.bin/del-cli dest/*",
    "lint:pug": "node_modules/.bin/pug-lint src/views",
    "lint:sass": "node_modules/.bin/sass-lint src/styles/*.scss -v -q",
    "lint": "npm run lint:pug && npm run lint:sass",
    "build:html": "pug --out dest/ src/views/",
    "build:css": "node-sass src/styles/ -o dest/css/",
    "build": "npm run clean && npm run lint && npm run build:html && npm run build:css"
  }
}
